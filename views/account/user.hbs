<script src="/javascripts/user.js"></script>
<div class="container mt-5">
    <!-- row -->
    <div class="row tm-content-row">
        <div class="tm-block-col tm-col-avatar">
            <div class="tm-bg-primary-dark tm-block tm-block-avatar">
                    <h2 class="tm-block-title">Avatar</h2>
                    <div class="tm-avatar-container">
                        <img src="{{user.cover}}" alt="Avatar" class="tm-avatar img-fluid mb-4" />
                    </div>

            </div>
        </div>
        <div class="tm-block-col tm-col-account-settings">
            <div class="tm-bg-primary-dark tm-block tm-block-settings">
                <h2 class="tm-block-title">Account Information</h2>
                <div class="form-group col-lg-12">
                    <label for="name">Account Name</label>
                    <p id="name" name="name" type="text" class="form-control validate">{{user.name}}</p>
                </div>
                <div class="form-group col-lg-12">
                    <label for="email">Account Email</label>
                    <p id="email" name="email" type="email" class="form-control validate">{{user.email}}</p>
                </div>
                <div class="form-group col-lg-6">
                    <label for="password">Account Birthday</label>
                    <p id="password" name="password" type="password" class="form-control validate" >{{user.birthday}}</p>
                </div>
                {{!-- <div class="form-group col-lg-6">
                    <label for="password2">Re-enter Password</label>
                    <input id="password2" name="password2" type="password" class="form-control validate" />
                </div> --}}
                <div class="form-group col-lg-12">
                    <label for="phone">Phone</label>
                    <p id="phone" name="phone" type="tel" class="form-control validate" >{{user.phone}}</p>
                </div>
                 <div class="form-group col-lg-6">
                    <label for="blocked">Blocked</label>
                    <p id="blocked" name="blocked" type="text" class="form-control validate" >{{user.blocked}}</p>
                </div>
                <button id="blockBtn" class="btn btn-warning" style="margin-left:2%;margin-top:4%">{{#ifEquals user.blocked false}}Block{{else}}Unblock{{/ifEquals}}</button>
                {{!-- <div class="form-group col-lg-12">
                    <label class="tm-hide-sm">&nbsp;</label>
                    <button type="submit" class="btn btn-primary btn-block text-uppercase">
                        Delete Your Account
                    </button>
                </div> --}}
            </div>
        </div>
    </div>
</div>